<UserControl x:Class="VSTAPP.Views.DesignationSelectionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <!-- SOP Block Style -->
        <Style x:Key="SOPBlockStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2E86AB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                BorderBrush="#FF1B5E82" 
                                BorderThickness="2">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3A9BC1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FFF5F5DC">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#FF2E86AB">
            <TextBlock Text="Designation &amp; SOP Selection" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- Designation Selection -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="Select Designation:" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"
                       Foreground="#FF2E86AB"/>

            <ComboBox x:Name="DesignationComboBox" 
                      Grid.Column="1"
                      FontSize="18"
                      Height="40"
                      Margin="10,0,0,0"
                      SelectionChanged="DesignationComboBox_SelectionChanged"/>
        </Grid>

        <!-- SOP Blocks Display -->
        <ScrollViewer Grid.Row="2" Margin="20" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="SOPBlocksPanel" Orientation="Vertical">
                <TextBlock x:Name="SOPSelectionTitle" 
                           Text="Select an SOP to begin training:" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Margin="0,20,0,30"
                           HorizontalAlignment="Center"
                           Foreground="#FF2E86AB"
                           Visibility="Collapsed"/>

                <WrapPanel x:Name="SOPBlocksContainer" 
                           HorizontalAlignment="Center"
                           ItemWidth="300"
                           ItemHeight="120"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Navigation Buttons -->
        <Grid Grid.Row="3" Background="#FFE8E8E8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton" 
                    Grid.Column="0"
                    Content="◀ Back" 
                    FontSize="18" 
                    FontWeight="Bold"
                    Background="#FF6C757D" 
                    Foreground="White"
                    Margin="20,10" 
                    Height="50"
                    Click="BackButton_Click"/>

            <TextBlock Grid.Column="1" 
                       x:Name="SelectionStatusText"
                       Text="Please select a designation first"
                       FontSize="16"
                       FontStyle="Italic"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="#FF6C757D"/>
        </Grid>
    </Grid>
</UserControl>