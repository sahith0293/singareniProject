<UserControl
    x:Class="VSTAPP.Views.AreaSelectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="av"
    Height="720" Width="1280">
    <Grid Background="#34495E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="ప్రాంతం మరియు గనిని ఎంచుకోండి" FontSize="36" FontWeight="Bold" 
                   Foreground="White" HorizontalAlignment="Center" Margin="0,20,0,20"
                   FontFamily="Nirmala UI"/>

        <!-- Selection Area -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Area Selection -->
            <Border Grid.Column="0" Background="#2C3E50" CornerRadius="10" Margin="10" Padding="10">
                <StackPanel>
                    <TextBlock Text="ప్రాంతం ఎంచుకోండి:" FontSize="24" Foreground="White" 
                               Margin="0,0,0,10" FontFamily="Nirmala UI"/>
                    <ListBox x:Name="AreaListBox" FontSize="20" Height="250" 
                             SelectionChanged="AreaListBox_SelectionChanged"
                             Background="#34495E" Foreground="White" BorderBrush="#3498DB"
                             FontFamily="Nirmala UI" av:ItemsSource="{av:SampleData ItemCount=5}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="Margin" Value="0,4,0,4"/>
                                <Setter Property="Background" Value="#34495E"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#3498DB"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2980B9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Mine Selection -->
            <Border Grid.Column="1" Background="#2C3E50" CornerRadius="10" Margin="10" Padding="10">
                <StackPanel>
                    <TextBlock Text="గనిని ఎంచుకోండి:" FontSize="24" Foreground="White" 
                               Margin="0,0,0,10" FontFamily="Nirmala UI"/>
                    <ListBox x:Name="MineListBox" FontSize="20" Height="250"
                             Background="#34495E" Foreground="White" BorderBrush="#3498DB"
                             FontFamily="Nirmala UI" av:ItemsSource="{av:SampleData ItemCount=5}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="Margin" Value="0,4,0,4"/>
                                <Setter Property="Background" Value="#34495E"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#3498DB"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2980B9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Navigation Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button x:Name="BackButton" Content="వెనుకకు" Width="160" Height="55"
                    FontSize="22" Margin="12,0" Background="#95A5A6" Foreground="White"
                    BorderBrush="Transparent" Click="BackButton_Click" 
                    FontFamily="Nirmala UI"/>
            <Button x:Name="NextButton" Content="తర్వాత" Width="160" Height="55"
                    FontSize="22" Margin="12,0" Background="#3498DB" Foreground="White"
                    BorderBrush="Transparent" Click="NextButton_Click"
                    FontFamily="Nirmala UI"/>
        </StackPanel>
    </Grid>
</UserControl>
